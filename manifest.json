{
  "manifest_version": 2,

  "name": "Svn checker",
  "description": "This extension shows svn information about deployed version",
  "version": "0.0.1.0",

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://*.privalia.com/*"
  ]
}
